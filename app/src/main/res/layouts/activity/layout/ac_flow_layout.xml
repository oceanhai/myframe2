<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ActionReceiveActivity">

    <LinearLayout
        android:id="@+id/ll_hot_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/select_factory_hot"
            android:drawablePadding="7.5dp"
            android:gravity="center"
            android:text="热门搜索"
            android:textColor="@color/credit_primary_text_color"
            android:textSize="13sp" />


        <com.wuhai.myframe2.ui.flowlayout.view.TagFlowLayout
            android:id="@+id/hot_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2.5dp" />

    </LinearLayout>
</LinearLayout>