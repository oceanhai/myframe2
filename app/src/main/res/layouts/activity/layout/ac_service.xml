<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.ActionReceiveActivity">

        <TextView android:text="startService"
            android:id="@+id/start_service"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="stopService"
            android:id="@+id/stop_service"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/global_horizontal_gray_solid_line1"/>

        <TextView android:text="startService2"
            android:id="@+id/start_service2"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="stopService2"
            android:id="@+id/stop_service2"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/global_horizontal_gray_solid_line1"/>
        <TextView android:text="起一个常驻服务，服务里进行广播监听"
            android:id="@+id/start_service3"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="结束常驻服务"
            android:id="@+id/stop_service3"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/global_horizontal_gray_solid_line1"/>
        <TextView android:text="绑定服务"
            android:id="@+id/bind_service"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="解除绑定服务"
            android:id="@+id/un_bind_service"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:text="调用服务中的方法"
            android:id="@+id/invoke_method"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/global_horizontal_gray_solid_line1"/>
        <TextView android:text="IntentService"
            android:id="@+id/intent_service"
            style="@style/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
