<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wuhai.myframe2.ui.customview.view.RandomNumberView
            app:titleText="3712"
            app:titleTextColor="#ff0000"
            app:titleTextSize="40sp"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/btn01"
            android:text="自定义表格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.wuhai.myframe2.ui.customview.view.LotteryView
            android:id="@+id/lottery_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <com.wuhai.myframe2.ui.customview.view.DrawBitmapView
            android:id="@+id/draw_bitmap_view"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <com.wuhai.myframe2.ui.customview.view.MyView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ac_matrix"
            android:text="matrix缩放"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ClipImageView"
            android:text="ClipImageView测试页"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.wuhai.myframe2.ui.customview.view.JCCLoadingView
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </LinearLayout>

</ScrollView>