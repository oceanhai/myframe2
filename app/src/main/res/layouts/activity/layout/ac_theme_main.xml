<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn01"
                android:textAllCaps="false"
                android:text="Theme.Light"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn02"
                android:textAllCaps="false"
                android:text="Theme.Light.NoTitleBar"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn03"
                android:textAllCaps="false"
                android:text="Theme.Light.NoTitleBar.Fullscreen"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn04"
                android:textAllCaps="false"
                android:text="Theme.Black"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn05"
                android:textAllCaps="false"
                android:text="Theme.Black.NoTitleBar"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn06"
                android:textAllCaps="false"
                android:text="Theme.Black.NoTitleBar.Fullscreen"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn07"
                android:textAllCaps="false"
                android:text="Theme.Wallpaper"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn08"
                android:textAllCaps="false"
                android:text="Theme.Wallpaper.NoTitleBar"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn09"
                android:textAllCaps="false"
                android:text="Theme.Wallpaper.NoTitleBar.Fullscreen"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn10"
                android:textAllCaps="false"
                android:text="Translucent"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn11"
                android:textAllCaps="false"
                android:text="Theme.Translucent.NoTitleBar"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn12"
                android:textAllCaps="false"
                android:text="Theme.Translucent.NoTitleBar.Fullscreen"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn13"
                android:textAllCaps="false"
                android:text="Theme.Panel"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn14"
                android:textAllCaps="false"
                android:text="Theme.Light.Panel"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="setSystemUiVisibility"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btn15"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_LOW_PROFILE"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn16"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_HIDE_NAVIGATION"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn17"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_FULLSCREEN"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn18"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_LAYOUT_STABLE"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn19"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn20"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn21"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_IMMERSIVE"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn22"
                android:textAllCaps="false"
                android:text="SYSTEM_UI_FLAG_IMMERSIVE_STICKY"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </ScrollView>
</layout>
