<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.wuhai.lotteryticket.views.ObservableScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--双色球-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:background="@drawable/shuangseqiu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:text="双色球"
                            android:textColor="@color/text_color_black_one"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/ssq_lottery_no_and_date_tv"
                            android:layout_marginLeft="5dp"
                            tools:text="19146期 12.21(昨天)"
                            android:textColor="@color/text_color_black_two"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/ssq_lottery_pool_amount_tv"
                            android:gravity="right"
                            tools:text="奖池 13.81亿"
                            android:textColor="@color/text_color_red_one"
                            android:textSize="12sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/double_ball_red1"
                            android:gravity="center"
                            tools:text="10"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/double_ball_red2"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="11"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/double_ball_red3"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="26"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/double_ball_red4"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="33"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/double_ball_red5"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="34"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:id="@+id/double_ball_red6"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="01"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_red"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <View
                            android:layout_marginLeft="5dp"
                            android:background="@color/line_color_gray_one"
                            android:layout_width="1dp"
                            android:layout_height="20dp"/>
                        <TextView
                            android:id="@+id/double_ball_blue1"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            tools:text="06"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:background="@drawable/public_circle_blue"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <View
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"/>
                        <ImageView
                            android:background="@drawable/arrow_right_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center"
                    android:text="红色号码个数"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_black_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Spinner
                    android:id="@+id/sp_red"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:text="蓝色号码个数"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_black_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <Spinner
                    android:id="@+id/sp_blue"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </com.wuhai.lotteryticket.views.ObservableScrollView>
</layout>
