<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/iv_icon_live"
        android:layout_width="133dp"
        android:layout_height="133dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_error" />

    <TextView
        android:id="@+id/tv_live_staus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_round_2_solid_ff004e"
        android:paddingLeft="3dp"
        android:paddingTop="2.5dp"
        android:paddingRight="3dp"
        android:paddingBottom="2.5dp"
        android:text="直播中"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_11"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_num_audience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_icon_live"
        android:layout_alignBottom="@+id/iv_icon_live"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/shape_round_2_solid_4d000000"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:text="0人观看"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_9" />

    <TextView
        android:id="@+id/tv_name_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/iv_icon_live"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_live"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_icon_live"
        android:background="@drawable/shape_round_5_solid_f8f8f8"
        android:paddingLeft="7dp"
        android:paddingTop="6dp"
        android:paddingRight="7dp"
        android:paddingBottom="6dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_icon_goods"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_error" />

        <TextView
            android:id="@+id/tv_name_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/iv_icon_goods"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/tv_price_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_goods"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_icon_goods"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_num_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_icon_live"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_icon_live"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_ff004e"
        android:textSize="@dimen/text_size_13"
        android:visibility="gone" />

    <View
        android:id="@+id/view_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_icon_live"
        android:layout_marginTop="10dp"
        android:background="@color/color_e6e6e6" />
</RelativeLayout>
