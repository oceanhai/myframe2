<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_round_5_solid_ffffff"
    android:paddingBottom="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_goods"
        android:layout_width="174dp"
        android:layout_height="158dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_error"
        app:riv_corner_radius_top_left="5dp"
        app:riv_corner_radius_top_right="5dp" />

    <TextView
        android:id="@+id/tv_name_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_goods"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="7dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_price_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name_goods"
        android:layout_alignLeft="@+id/tv_name_goods"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_e10019"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_integral_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price_goods"
        android:layout_alignLeft="@+id/tv_name_goods"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_round_3_solid_e10019"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:gravity="center"
        android:paddingBottom="1dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_find_same"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price_goods"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/shape_round_40_stroke_a0a0a0"
        android:paddingLeft="6dp"
        android:paddingTop="3dp"
        android:paddingRight="6dp"
        android:paddingBottom="3dp"
        android:text="找相似"
        android:textColor="@color/color_a0a0a0"
        android:textSize="@dimen/text_size_11" />
</RelativeLayout>