<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/item_lottery_no_and_date_tv"
                android:layout_marginLeft="5dp"
                tools:text="19146期 12.21(昨天)"
                android:textColor="@color/text_color_black_two"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_lottery_pool_amount_tv"
                android:layout_marginLeft="20dp"
                tools:text="奖池 13.81亿"
                android:textColor="@color/text_color_red_one"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.wuhai.demo.lotteryticketkotlin.views.LotteryView
            android:id="@+id/item_lottery_view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <View
            android:id="@+id/item_line"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color_gray_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</layout>
