<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >
        <include layout="@layout/global_horizontal_gray_solid_line10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_lottery_hint_tv"
                    android:text="开奖提示"
                    android:textColor="@color/text_color_black_one"
                    android:textSize="18sp"
                    android:drawableRight="@drawable/icon_tishi"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_lottery_time_tv"
                    android:layout_marginTop="5dp"
                    android:text="每周二、四、日 21:15开奖"
                    android:textColor="@color/text_color_black_two"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/item_lottery_rule_tv"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="中奖\n规则"
                android:textColor="@color/text_color_red_one"
                android:textSize="18sp"
                android:drawableRight="@drawable/icon_problem"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <include layout="@layout/global_horizontal_gray_solid_line10"/>
    </LinearLayout>
</layout>
